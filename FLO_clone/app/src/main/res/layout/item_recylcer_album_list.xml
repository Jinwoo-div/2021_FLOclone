<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/album_list_item_num_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/album_list_item_title_tv"
        android:text="00"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1">
    </TextView>
    <TextView
        android:id="@+id/album_list_item_title_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="title"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/album_list_item_num_tv"
        app:layout_constraintRight_toLeftOf="@id/album_list_item_play_btn"
        app:layout_constraintBottom_toTopOf="@id/album_list_item_artist_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="8">
    </TextView>
    <TextView
        android:id="@+id/album_list_item_artist_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="artist"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/album_list_item_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/album_list_item_num_tv"
        app:layout_constraintRight_toLeftOf="@id/album_list_item_play_btn"
        app:layout_constraintHorizontal_weight="1">
    </TextView>
    <ImageButton
        android:id="@+id/album_list_item_play_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/album_list_item_title_tv"
        app:layout_constraintRight_toLeftOf="@id/album_list_item_menu_btn"
        android:src="@drawable/btn_player_play"
        android:scaleType="fitCenter"
        android:background="@color/design_default_color_background"
        app:layout_constraintHorizontal_weight="1">
    </ImageButton>
    <ImageButton
        android:id="@+id/album_list_item_menu_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/album_list_item_play_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/btn_player_more"
        android:scaleType="fitCenter"
        android:background="@color/design_default_color_background"
        app:layout_constraintHorizontal_weight="1">
    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>