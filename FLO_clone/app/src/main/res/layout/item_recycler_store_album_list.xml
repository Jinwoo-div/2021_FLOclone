<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/store_album_list_img_cv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/store_album_list_else_tv">
        <ImageView
            android:id="@+id/store_album_list_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/apple_44">
        </ImageView>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/store_album_list_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/store_album_list_img_cv"
        app:layout_constraintBottom_toTopOf="@id/store_album_list_artist_tv"
        android:text="title"
        android:textSize="16dp"
        android:textColor="#A6A6A6"
        android:layout_marginLeft="10dp">
    </TextView>
    <TextView
        android:id="@+id/store_album_list_artist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/store_album_list_title_tv"
        app:layout_constraintBottom_toTopOf="@id/store_album_list_else_tv"
        app:layout_constraintLeft_toRightOf="@id/store_album_list_img_cv"
        android:text="artist"
        android:textSize="16dp"
        android:textColor="#A6A6A6"
        android:layout_marginLeft="10dp">
    </TextView>
    <TextView
        android:id="@+id/store_album_list_else_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/store_album_list_img_cv"
        app:layout_constraintTop_toBottomOf="@id/store_album_list_artist_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text = "2021.03.25 | 정규 | 댄스 팝"
        android:textSize="16dp"
        android:textColor="#A6A6A6"
        android:layout_marginLeft="10dp">
    </TextView>
    <ImageView
        android:id="@+id/store_album_list_play_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/store_album_list_menu_iv"
        app:layout_constraintLeft_toRightOf="@id/store_album_list_else_tv"
        android:src="@drawable/btn_miniplayer_play"
        android:layout_marginLeft="30dp">
    </ImageView>
    <ImageView
        android:id="@+id/store_album_list_menu_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/store_album_list_play_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/btn_player_more">
    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>