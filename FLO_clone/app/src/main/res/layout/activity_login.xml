<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/login_close_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/btn_actionbar_close">
    </ImageView>
    <ImageView
        android:id="@+id/login_title_iv"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_address_cl"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_flo_logo">
    </ImageView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_address_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_title_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_pw_et"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintHorizontal_weight="5">
        <EditText
            android:id="@+id/login_id_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/login_address_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="아이디(이메일)"
            android:textSize="19dp"
            android:textColor="#A6A6A6"
            android:minWidth="150dp"
            android:minHeight="60dp"
            android:gravity="left"
            android:backgroundTint="@android:color/darker_gray"
            android:textCursorDrawable="@color/black"
            android:textSelectHandle="@color/purple_500"
            android:textColorHighlight="@android:color/darker_gray"
            app:layout_constraintHorizontal_weight="2.4">
        </EditText>
        <TextView
            android:id="@+id/login_address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/login_id_et"
            app:layout_constraintRight_toLeftOf="@id/login_address_et"
            android:text="\@"
            android:textSize="19dp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            app:layout_constraintHorizontal_weight="0.3">
        </TextView>
        <EditText
            android:id="@+id/login_address_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/login_address_tv"
            app:layout_constraintTop_toTopOf="parent"
            android:text="직접입력"
            android:textSize="19dp"
            android:textColor="#A6A6A6"
            android:gravity="left"
            android:minWidth="140dp"
            android:minHeight="60dp"
            android:backgroundTint="@android:color/darker_gray"
            android:textCursorDrawable="@color/black"
            android:textSelectHandle="@color/purple_500"
            android:textColorHighlight="@android:color/darker_gray"
            app:layout_constraintHorizontal_weight="2.4">
        </EditText>
        <ImageView
            android:id="@+id/login_address_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/nugu_btn_down">
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <EditText
        android:id="@+id/login_pw_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/login_address_cl"
        app:layout_constraintLeft_toLeftOf="@id/login_address_cl"
        app:layout_constraintTop_toBottomOf="@id/login_address_cl"
        android:layout_marginTop="30dp"
        android:text="비밀번호"
        android:textSize="19dp"
        android:inputType="text"
        android:textColor="#A6A6A6"
        android:minWidth="150dp"
        android:minHeight="60dp"
        android:gravity="left"
        android:backgroundTint="@android:color/darker_gray"
        android:textCursorDrawable="@color/black"
        android:textSelectHandle="@color/purple_500"
        android:textColorHighlight="@android:color/darker_gray">
    </EditText>
    <ImageView
        android:id="@+id/login_pw_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/btn_input_password"
        app:layout_constraintRight_toRightOf="@id/login_pw_et"
        app:layout_constraintTop_toBottomOf="@id/login_address_cl"
        app:layout_constraintBottom_toBottomOf="@id/login_pw_et">
    </ImageView>
    <TextView
        android:id="@+id/login_go_login_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_pw_et"
        app:layout_constraintLeft_toLeftOf="@id/login_pw_et"
        app:layout_constraintRight_toRightOf="@id/login_pw_et"
        android:background="@color/purple_500"
        android:text="로그인"
        android:gravity="center"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="30dp">
    </TextView>
    <TextView
        android:id="@+id/login_find_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_go_login_tv"
        app:layout_constraintLeft_toLeftOf="@id/login_pw_et"
        app:layout_constraintRight_toLeftOf="@id/login_find_pw_tv"
        app:layout_constraintBottom_toTopOf="@id/login_go_login_witht_cl"
        android:text="아이디 찾기 |"
        android:textSize="17dp"
        android:textColor="#A6A6A6"
        android:layout_marginTop="10dp">
    </TextView>
    <TextView
        android:id="@+id/login_find_pw_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/login_find_id_tv"
        app:layout_constraintTop_toBottomOf="@id/login_go_login_tv"
        android:text=" 비밀번호 찾기"
        android:textSize="17dp"
        android:textColor="#A6A6A6"
        android:layout_marginTop="10dp">
    </TextView>
    <TextView
        android:id="@+id/login_go_signup_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_go_login_tv"
        app:layout_constraintRight_toRightOf="@id/login_pw_et"
        android:textSize="17dp"
        android:text="회원가입"
        android:textStyle="bold"
        android:layout_marginTop="10dp">
    </TextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_go_login_witht_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_find_id_tv"
        app:layout_constraintLeft_toLeftOf="@id/login_pw_et"
        app:layout_constraintRight_toRightOf="@id/login_pw_et"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="30dp"
        android:background="@color/black">
        <ImageView
            android:id="@+id/login_go_login_witht_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/login_go_login_witht_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:src="@drawable/ico_20_logo_tid_white">
        </ImageView>
        <TextView
            android:id="@+id/login_go_login_witht_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/login_go_login_witht_iv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:text="아이디로 로그인"
            android:gravity="center"
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="6dp">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_go_login_withphone_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_go_login_witht_cl"
        app:layout_constraintLeft_toLeftOf="@id/login_pw_et"
        app:layout_constraintRight_toRightOf="@id/login_pw_et"
        android:padding="11dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_layout"
        >
        <ImageView
            android:id="@+id/login_go_login_withphone_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/login_go_login_withphone_tv"
            android:src="@drawable/btn_setting_phone"
            app:layout_constraintHorizontal_chainStyle="packed">
        </ImageView>
        <TextView
            android:id="@+id/login_go_login_withphone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/login_go_login_withphone_iv"
            app:layout_constraintRight_toRightOf="parent"
            android:text="휴대폰 번호 로그인"
            android:gravity="center"
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="6dp"
            app:layout_constraintHorizontal_chainStyle="packed">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_go_login_withphone_cl"
        app:layout_constraintLeft_toLeftOf="@id/login_pw_et"
        app:layout_constraintRight_toRightOf="@id/login_pw_et"
        android:layout_marginTop="30dp">
    <ImageView
        android:id="@+id/login_go_login_withnaver_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/naver_44"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/login_go_login_withkakao_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginRight="15dp">
    </ImageView>
    <ImageView
        android:id="@+id/login_go_login_withkakao_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/kakako_44"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/login_go_login_withnaver_iv"
        app:layout_constraintRight_toLeftOf="@id/login_go_login_withapple_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginRight="15dp">
    </ImageView>
    <ImageView
        android:id="@+id/login_go_login_withapple_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/apple_44"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/login_go_login_withkakao_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed">
    </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ProgressBar
        android:id="@+id/login_loading_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="invisible">
    </ProgressBar>

</androidx.constraintlayout.widget.ConstraintLayout>