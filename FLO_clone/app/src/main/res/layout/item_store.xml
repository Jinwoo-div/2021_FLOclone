<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_store_album_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_store_album_artist_tv"
        app:cardCornerRadius="8dp">
        <ImageView
            android:id="@+id/item_store_album_iv"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_miniplayer_previous">
        </ImageView>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/item_store_album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        app:layout_constraintLeft_toRightOf="@id/item_store_album_cv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:id="@+id/item_store_album_artist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="artist"
        app:layout_constraintLeft_toRightOf="@id/item_store_album_cv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"
        android:textSize="18dp">
    </TextView>
    <ImageView
        android:id="@+id/item_store_album_play_iv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_player_play"
        app:layout_constraintRight_toLeftOf="@id/item_store_album_more_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp">
    </ImageView>
    <ImageView
        android:id="@+id/item_store_album_more_iv"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop">
    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>